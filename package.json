{
  "name": "@dspcoder",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*",
    "server/*",
    "tooling/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@dspcoder/eslint-config": "workspace:*",
    "@dspcoder/tsconfig": "workspace:*",
    "prettier": "^3.2.5",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  }
}
